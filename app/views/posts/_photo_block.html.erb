<section>
  <header><%if current_user%><%= current_user.handle %><%end%></header>
  <main><%= image_tag photo.image(:thumb) %></main>
  <footer>
    <nav>
      <%= link_to 'X', post_path(photo), method: :delete%>
      <%= link_to 'comment', '#' %>
    </nav>
    <% form_for post_comments_path(photo) do |f| %>
      <%= f.hidden_field :post_id, value: photo.id %>
      <%= f.text_area :comment %>
      <%= f.submit 'Comment' %>
    <%end%>
  </footer>
</section>